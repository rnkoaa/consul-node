{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es6"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}